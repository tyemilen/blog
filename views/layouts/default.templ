package layouts
import (
	"dokinar.ik/blog/views/components"
)

templ Default(title string, head templ.Component) {
	<!DOCTYPE html>
	<html>
		<head>
			<title>{ title }</title>
			<meta charset="UTF-8" />
			<meta name="viewport" content="width=device-width, initial-scale=1.0" />

			<link href="/assets/css/style.css" rel="stylesheet"/>

			@head
		</head>
		<body>
			@components.Header()
			{ children... }
		</body>
	</html>
}